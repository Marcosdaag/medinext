// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==========================================
// MODULO DE USUARIOS
// ==========================================
enum Role {
  SUPERADMIN
  DOCTOR
  USER
}

model User {
  // 1. Llave Primaria
  id String @id @default(uuid())

  // 2. Datos del Perfil
  email       String    @unique
  dni         String?   @unique
  fullName    String
  phoneNumber String?
  birthDate   DateTime?
  avatarUrl   String?
  timeZone    String    @default("UTC")

  // 3. Seguridad y Estados
  hashedPassword       String
  roles                Role[]    @default([USER])
  isActive             Boolean   @default(true)
  tokenVersion         Int       @default(0)
  passwordChangedAt    DateTime?
  resetPasswordToken   String?
  resetPasswordExpires DateTime?

  // 4. Relaciones
  doctorProfile DoctorProfile?
  appointments  Appointment[]

  // 5. Auditoría
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ==========================================
// MODULO DE DOCTORES
// ==========================================
model DoctorProfile {
  //Llave Primaria
  id String @id @default(uuid())

  //Datos del Perfil Médico
  specialty     String
  visitDuration Int     @default(30)
  visitPrice    Decimal @default(0.00) @db.Decimal(10, 2)

  //Llave Foránea y Relaciones
  userId String @unique
  user   User   @relation(fields: [userId], references: [id])

  availabilities Availability[]
  overrides      ScheduleOverride[]
  appointments   Appointment[]

  //Auditoría
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  //Índices de Búsqueda
  @@index([specialty])
}

model Availability {
  id        String @id @default(uuid())
  dayOfWeek Int
  startTime String
  endTime   String

  doctorId String
  doctor   DoctorProfile @relation(fields: [doctorId], references: [id])
}

model ScheduleOverride {
  id        String   @id @default(uuid())
  startDate DateTime
  endDate   DateTime
  reason    String?

  doctorId String
  doctor   DoctorProfile @relation(fields: [doctorId], references: [id])
}

// ==========================================
// MODULO DE TURNOS E HISTORIA CLINICA
// ==========================================
enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model Appointment {
  // 1. Llave Primaria
  id String @id @default(uuid())

  // 2. Datos del Turno
  dateUTC      DateTime
  status       AppointmentStatus @default(PENDING)
  paymentId    String?
  cancelReason String?

  // 3. Llaves Foráneas y Relaciones
  patientId String
  patient   User   @relation(fields: [patientId], references: [id])

  doctorId String
  doctor   DoctorProfile @relation(fields: [doctorId], references: [id])

  medicalRecord MedicalRecord?

  // 5. Auditoría
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 6. Índices de Búsqueda
  @@index([patientId])
  @@index([doctorId, dateUTC])
}

model MedicalRecord {
  // 1. Llave Primaria
  id String @id @default(uuid())

  // 2. Datos Médicos
  diagnosis    String
  prescription String?
  notes        String?

  // 3. Llave Foránea y Relación
  appointmentId String      @unique
  appointment   Appointment @relation(fields: [appointmentId], references: [id])

  // 5. Auditoría
  createdAt DateTime @default(now())
}
